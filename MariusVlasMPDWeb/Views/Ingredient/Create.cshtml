@model Ingredient 
<form method="post">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h1>Create Ingredient</h1>
        </div>
        <hr/>
        <table>
            <tr>
                <td class="pt-4 pr-4"><label asp-for="Name"></label>&nbsp;&nbsp;</td>
                <td class="pt-4">
                    <input asp-for="Name"/>
                </td>
                <td>
                    <span asp-validation-for="Name" class="text-danger mt-2 ml-4"></span>
                </td>
            </tr>
        </table>
        <button type="submit" class="mt-5 btn-primary btn">Save new ingredient</button>
    </div>
</form>

